                </div>
            </div>
            

        </section>

        @foreach (var page in Model.GroupBy(p => p.ProductType.ProductTypeCode))
        {
            <hr class="m-0">
            <section class="resume-section p-3 p-lg-4 d-flex flex-column" id="@Html.DisplayFor(pageItem => page.Key)">
                <div class="row ">
                    @foreach (var item in Model.Where(x => x.ProductType.ProductTypeCode == page.Key))
                    {
                        <div class="col">
                            <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                                <div class="product-item">
                                    <div class="product discount product_filter">
                                        <div class="product_image">
                                            <img src="@Url.Action("Details", "ProductAdmin", new  { id = item.ID, area = "Admin" })" width="150" height="200" />
                                        </div>
                                        <div class="product_info" @Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)>
                                            <h6 class="product_name">@Html.ActionLink(item.ProductName, "Details", new { id = item.ID })</h6>
                                            <div class="product_price">@Html.DisplayFor(modelItem => item.SalePrice) VNĐ</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>

            </section>


        }

        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
