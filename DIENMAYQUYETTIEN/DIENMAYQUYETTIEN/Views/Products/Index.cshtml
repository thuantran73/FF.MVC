@model IEnumerable<DIENMAYQUYETTIEN.Models.Product>

@{
    ViewBag.Title = "Products";
}


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Resume - Start Bootstrap Theme</title>

    <!-- Bootstrap core CSS -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/main_styles.css" rel="stylesheet" />*@


    <!-- Custom fonts for this template -->
    <link href="https://fonts.googleapis.com/css?family=Saira+Extra+Condensed:500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,400i,800,800i" rel="stylesheet">
    <link href="~/Content/all.min.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/Content/responsive.css" rel="stylesheet" />

    <link href="~/Content/owl.carousel.css" rel="stylesheet" />
    <link href="~/Content/owl.theme.default.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/resume.min.css" rel="stylesheet" />

</head>

<body id="page-top">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top" id="sideNav">
        <a class="navbar-brand js-scroll-trigger" href="#page-top">
            <span class="d-block d-lg-none">Clarence Taylor</span>
            <span class="d-none d-lg-block">
                <img class="img-fluid img-profile rounded-circle mx-auto mb-2" src="~/Image/logo.png" alt="">
            </span>
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="#about">About</a>
                </li>
                @foreach (var code in Model)
                {
                    <li class="nav-item">
                        <a class="nav-link js-scroll-trigger" href="#@Html.DisplayFor(codeItem => code.ProductType.ProductTypeCode)">@Html.DisplayFor(codeItem => code.ProductType.ProductTypeName)</a>
                    </li>
                }
                <li class="nav-item">
                    <a class="nav-link js-scroll-trigger" href="~/Areas/Admin/Views/Account/Login.cshtml">Login</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid p-0" style="width:1000px">

        <section class="resume-section p-3 p-lg-5 d-flex d-column" id="about">
            <div class="my-auto">
                <h1 class="mb-0">
                    Điện máy
                    <span class="text-primary">Quyết Tiến</span>
                </h1>
                <div class="subheading mb-5">
                    45 Nguyễn Khắc Nhu, Phường Cô Giang, Quận 1, Hồ Chí Minh, Việt Nam ·
                    <a href="mailto:name@email.com">dienmayquyettien@email.com</a>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.63192324128!2d106.69112221478758!3d10.76282456238764!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752f16ad86371b%3A0x949d258c9508b1f2!2zxJDhuqFpIGjhu41jIFbEg24gTGFuZyBjxqEgc-G7nw!5e0!3m2!1svi!2s!4v1545887003595" width="600" height="250" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <p class="lead mb-5">I am experienced in leveraging agile frameworks to provide a robust synopsis for high level overviews. Iterative approaches to corporate strategy foster collaborative thinking to further the overall value proposition.</p>
                <div class="social-icons">
                    <a href="#">
                        <i class="fab fa-linkedin-in"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-twitter"></i>
                    </a>
                    <a href="#">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </div>
            </div>
        </section>

        @foreach (var page in Model)
        {
            <hr class="m-0">
            <section class="resume-section p-3 p-lg-5 d-flex flex-column" id="@Html.DisplayFor(pageItem => page.ProductType.ProductTypeCode)">
                <div class="row ">
                    @foreach (var item in Model)
                    {

                        
                            <div class="col">
                                <div class="product-grid" data-isotope='{ "itemSelector": ".product-item", "layoutMode": "fitRows" }'>

                                    <div class="product-item">
                                        <div class="product discount product_filter">
                                            <div class="product_image">
                                                <img width="100" height="200" src="~/Image/iphonex.jpg">
                                            </div>
                                            <div class="product_info" @Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)>
                                                <h6 class="product_name">@Html.ActionLink(item.ProductName, "Details", new { id = item.ID })</h6>
                                                <div class="product_price">@Html.DisplayFor(modelItem => item.SalePrice)</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        

                    }
                </div>
            </section>
        }


    </div>

    <!-- Bootstrap core JavaScript -->
    <script src="~/Scripts/popper.js"></script>
    @*<script src="~/Scripts/isotope.pkgd.min.js"></script>*@
    <script src="~/Scripts/owl.carousel.js"></script>
    <script src="~/Scripts/easing.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

    <!-- Plugin JavaScript -->
    <!-- <script src="vendor/jquery-easing/jquery.easing.min.js"></script> -->
    <!-- Custom scripts for this template -->
    <script src="~/Scripts/resume.min.js"></script>

</body>

</html>

