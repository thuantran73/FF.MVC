@model DIENMAYQUYETTIEN.Models.Product

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_ADMINLAYOUT.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3 style="padding-left:400px">CREATE A PRODUCT</h3>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.ProductCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.ProductCode)
                @Html.ValidationMessageFor(model => model.ProductCode)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.ProductName)
                @Html.ValidationMessageFor(model => model.ProductName)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.ProductTypeID, "ProductTypeID", new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.DropDownList("ProductTypeID", new SelectList(ViewBag.Prod, "ID", "ProductTypeName"))
                @Html.ValidationMessageFor(model => model.ProductTypeID)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.SalePrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.SalePrice)
                @Html.ValidationMessageFor(model => model.SalePrice)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.OriginPrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.OriginPrice)
                @Html.ValidationMessageFor(model => model.OriginPrice)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.InstallmentPrice, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.InstallmentPrice)
                @Html.ValidationMessageFor(model => model.InstallmentPrice)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.Avatar, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:400px; height:38px">
                @Html.TextBox("HinhAnh", null, new { type = "file", accept = "image/gif, image/jpeg, image/png", onchange = "readURL(this);", @class = "form-control" })
                @Html.ValidationMessage("HinhAnh")
                <img id="HinhSP" src="" />
            </div>
        </div>

        <div class="form-group" style="margin-left:150px">
            @Html.LabelFor(model => model.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10" style="display:inline-block; width:100px">
                @Html.EditorFor(model => model.Status)
                @Html.ValidationMessageFor(model => model.Status)
            </div>
        </div>

        <div class="form-group" style="margin-left:300px">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
