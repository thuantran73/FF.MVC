@model IEnumerable<DIENMAYQUYETTIEN.Models.InstallmentBill>

@{
    ViewBag.Title = "Installment Cash Bill Management";
    Layout = "~/Areas/Admin/Views/Shared/_ADMINLAYOUT.cshtml";
}

<div class="container">
    <h2>Installment Cash Bill Management</h2>

    <button class="label-primary">
        @Html.ActionLink("Add new installment cash bill", "Create")
    </button>
    <div class="card mb-3">
        <div class="card-header">
            <i class="fa fa-table"></i> Installment Cash Bill Management
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Bill Code</th>
                            <th>Date</th>
                            <th>Shipper</th>
                            <th>Note</th>
                            <th>Method</th>
                            <th>Period</th>
                            <th>Grandtotal</th>
                            <th>Taken</th>
                            <th>Remain</th>
                            <th>Action</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BillCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Shipper)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Method)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Period)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GrandTotal)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Taken)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Remain)
                                </td>
                                @*<td>
                                        @Html.DisplayFor(modelItem => item.Customer.CustomerCode)
                                    </td>*@
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>

        </div>
    </div>
</div>